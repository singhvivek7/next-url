generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum PlanType {
  BASIC
  PRO
  CUSTOM
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  email      String   @unique
  password   String
  name       String
  role       Role     @default(USER)
  plan       PlanType @default(BASIC)
  username   String  @unique @default(cuid()) // random string 8 char
  avatar     String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Relations
  urls Url[]
  transactions Transaction[]
  plan_expires_at DateTime?

  @@map("users")
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

model Transaction {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  amount        Float
  currency      String        @default("INR")
  status        PaymentStatus @default(PENDING)
  payment_id    String?
  order_id      String
  signature     String?
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt

  // User relation
  user_id       String        @db.ObjectId
  user          User          @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // Plan details snapshot
  plan_type     PlanType

  @@index([user_id])
  @@index([order_id])
  @@map("transactions")
}

model Url {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  original_url String
  short_url    String    @unique
  title        String?
  description  String?
  favicon      String?
  is_active    Boolean   @default(true)
  expires_at   DateTime?
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  // User relation (optional - for anonymous URLs)
  user_id    String?   @db.ObjectId
  creator_ip String?   // For anonymous rate limiting
  user       User?     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  // Relations
  clicks Click[]

  // Indexes for better performance
  @@index([user_id])
  @@index([created_at])
  @@index([is_active])  // Index for filtering active URLs
  @@index([expires_at]) // Index for cleanup queries
  @@map("urls")
}

model Click {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())

  // URL relation
  url_id String @db.ObjectId
  url    Url    @relation(fields: [url_id], references: [id], onDelete: Cascade)

  // Analytics data
  ip_address String?
  user_agent String?
  referer    String?
  country    String?
  city       String?
  region     String?
  timezone   String?
  device     String?
  browser    String?
  os         String?
  
  // Relation to advanced metadata
  metadata   ClickMetadata?

  // Indexes for analytics queries
  @@index([url_id])
  @@index([created_at])
  @@index([country])
  @@index([browser])
  @@index([os])
  @@index([device])
  @@map("clicks")
}

model ClickMetadata {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  click_id       String  @unique @db.ObjectId
  click          Click   @relation(fields: [click_id], references: [id], onDelete: Cascade)

  // Advanced monitoring data
  language       String?
  isp            String?
  org            String?
  asn            String?
  referer_domain String?
  is_bot         Boolean @default(false)
  
  @@map("click_metadata")
}


model Analytics {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  url_id String   @db.ObjectId
  date   DateTime
  clicks Int      @default(0)

  // Aggregated analytics data
  countries Json? // {"US": 10, "UK": 5, ...}
  devices   Json? // {"mobile": 8, "desktop": 7, ...}
  browsers  Json? // {"chrome": 10, "firefox": 5, ...}
  referers  Json? // {"google.com": 5, "twitter.com": 3, ...}

  @@unique([url_id, date])
  @@index([url_id])
  @@index([date])
  @@map("analytics")
}

model Plan {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  type        PlanType @unique
  name        String
  description String?
  price       Float    @default(0)
  currency    String   @default("INR")
  features    String[]
  limits      Json?    @default("{ \"urls\": 10, \"clicks\": 1000 }")
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("plans")
}
